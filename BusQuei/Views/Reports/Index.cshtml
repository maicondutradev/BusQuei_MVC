@{
    ViewData["Title"] = "Relatórios";
}

<head>
    <link rel="stylesheet" href="~/css/home.css">
</head>

<div class="text-center">
    <h1 class="display-4">Relatórios do Sistema</h1>
</div>

<div class="container features">

    <div class="row">
        <div class="col-md-12">
            <h3>Selecione um Relatório</h3>
            <p>Escolha o tipo de relatório que deseja visualizar ou exportar:</p>

            <form method="post" asp-controller="Reports" asp-action="GeneratePdf">
                <div class="form-group">
                    <label for="reportType">Tipo de Relatório</label>
                    <select id="reportType" name="reportType" class="form-control">
                        <option value="bus">Ônibus</option>
                        <option value="routes">Rotas</option>
                        <option value="maintenance">Manutenções</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Exportar como PDF</button>
            </form>
        </div>
    </div>
