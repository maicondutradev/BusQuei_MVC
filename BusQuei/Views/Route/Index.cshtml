@model IEnumerable<BusQuei.Models.Route>

@{
    ViewData["Title"] = "Index";
}

<h1>Rotas</h1>

<p>
    <a class="btn btn-create" asp-action="Create">Criar uma rota</a>
</p>

<head>
    <link rel="stylesheet" href="~/css/route.css" asp-append-version="true" />
</head>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrival)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartureTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td>
                    <a class="btn btn-edit" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-details" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
